<% provide(:title, "Bank Accounts") %>
<p id="notice"><%= notice %></p>




<div class="breadcrumb">
  <h3>Bank Accounts</h3>
</div>


<div class="jumbotron">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Financialinstitution</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @bankaccounts.each do |bankaccount| %>
      <tr>
        <td><%= link_to bankaccount.financialinstitution.name, bankaccount %></td>
        <td><%= bankaccount.person.fullname %></td>
        <td><%= bankaccount.account_name %></td>
        <td><%= link_to 'View', bankaccount, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_bankaccount_path(bankaccount), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', bankaccount, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

<%= will_paginate @bankaccounts %>
</div>

<div class="breadcrumb">
  <%= link_to 'New Bank Account', new_bankaccount_path, class:'fa fa-plus' %>
</div>

