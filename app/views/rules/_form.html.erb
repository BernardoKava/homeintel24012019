
<%= simple_form_for(@rule) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="jumbotron">

      <div class="control-group">
        <%= f.label :rules_category_id, "Category",class: 'control-label' %>
        <div class ="controls">
          <%= f.collection_select :rules_category_id, RulesCategory.order(:name), :id, :name, include_blank: true %>
        </div>
      </div>
      <%= f.input :policy_code, value: @policy_code %>
      <%= f.input :title %>
      <%= f.input :definition %>
      <%= f.input :active %>
      <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id} %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit,"Save" %>
  </div>
<% end %>
<br>