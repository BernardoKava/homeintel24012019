<% provide(:title, "Policies") %>
<p id="notice"><%= notice %></p>

<div class="breadcrumb">
  <h3>Rules</h3>
</div>




<div class="jumbotron">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Code</th>
      <th>Category</th>
      <th>Title</th>
      <th>Definition</th>
      <th>Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= link_to rule.policy_code,rule %></td>
        <td><%= rule.rules_category_id %></td>
        <td><%= rule.title %></td>
        <td><%= rule.definition %></td>
        <td><%= rule.active.humanize %></td>
        <td><%= rule.user.fullname %></td>
        <td><%= link_to 'View', rule ,class:'fa fa-eye'%></td>
        <td><%= link_to 'Edit', edit_rule_path(rule),class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', rule, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>
<div class="breadcrumb">
  <%= link_to 'New Rule', new_rule_path, class:'fa fa-plus' %>
</div>

