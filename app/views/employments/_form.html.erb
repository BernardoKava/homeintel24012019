
<%= simple_form_for(@employment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :company %>
    <%= f.input :position %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.input :role %>
    <%= f.input :terminationreason %>
    <%= f.input :actve %>
    <%= f.input :person_id %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
