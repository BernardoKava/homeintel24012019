<% provide(:title, "Service Providers") %>
<p id="notice"><%= notice %></p>


<div class="breadcrumb">
  <h3>Service Providers</h3>
</div>


<div class="jumbotron">
  <table class="table tabel-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Logged by</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @service_providers.each do |service_provider| %>
      <tr>
        <td><%= link_to service_provider.name, service_provider %></td>
        <td><%= service_provider.user.fullname %></td>
        <td><%= service_provider.active.humanize %></td>
        <td><%= link_to 'View', service_provider, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_service_provider_path(service_provider), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', service_provider, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

<div class="breadcrumb">
  <%= link_to 'New Service Provider', new_service_provider_path, class:'fa fa-plus' %>
</div>

