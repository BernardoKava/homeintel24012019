<% provide(:title, "Cashflows") %>

<p id="notice"><%= notice %></p>


<div class="breadcrumb">
  <h3>Cashflows</h3>
</div>

<div class="jumbotron">
  <table class=" table table-hover">
    <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Accounting date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cashflows.each do |cashflow| %>
      <tr>
        <td><%= link_to cashflow.month, cashflow %></td>
        <td><%= cashflow.year %></td>
        <td><%= cashflow.accounting_date.strftime("%d, %b  %Y") %></td>
        <td><%= cashflow.name %></td>
        <td><%= link_to 'View', cashflow, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_cashflow_path(cashflow), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', cashflow, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @cashflows %>
  <br>

</div>



<div class="breadcrumb">
<%= link_to 'New Cashflow', new_cashflow_path, class:'fa fa-plus' %>
</div>