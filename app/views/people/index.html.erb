<% provide(:title, "People ") %>
<p id="notice"><%= notice %></p>

<div class="breadcrumb">
  <h3>Home Occupants</h3>
</div>




<div class="jumbotron">

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>


      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, person %></td>
        <td><%= person.surname %></td>
        <td><%= link_to 'View', person, class: 'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_person_path(person), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } , class:'fa fa-remove'%></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= will_paginate @people %>
  <br>

</div>



<div class="breadcrumb">
  <%= link_to 'New Person', new_person_path , class:'fa fa-plus'%>
</div>

