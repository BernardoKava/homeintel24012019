<% provide(:title, "Saving Recons") %>
<p id="notice"><%= notice %></p>


<div class="breadcrumb">
  <h3>Saving Recons</h3>
</div>




<table class="table table-hover">
  <thead>
    <tr>
      <th>Saving</th>
      <th>Registered by:</th>
      <th>Correction amount</th>
      <th>Authorised by</th>
      <th>Authorisation date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saving_recons.each do |saving_recon| %>
      <tr>
        <td><%= link_to saving_recon.saving.name, saving_recon %></td>
        <td><%= saving_recon.user.fullname %></td>
        <td><%= saving_recon.correction_amount %></td>
        <td><%= saving_recon.person.fullname %></td>
        <td><%= saving_recon.authorisation_date %></td>
        <td><%= link_to 'View', saving_recon,class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_saving_recon_path(saving_recon), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', saving_recon, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @saving_recons %>
<br>

<div class="breadcrumb">
  <%= link_to 'New Saving Recon', new_saving_recon_path, class:'fa fa-plus' %>
</div>


