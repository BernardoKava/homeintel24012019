
<%= simple_form_for(@saving_recon) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="jumbotron">
    <div class="control-group">
      <%= f.label :saving_id,"Saving" %>
      <div class ="controls">
        <%= f.collection_select :saving_id, Saving.order(:name), :id, :name, include_blank: true %>
      </div>
    </div>
    <br>
    <div class="form-inputs">
      <%= f.input :user_id,:as => :hidden, :input_html => { :value => current_user.id} %>
      <%= f.input :error_details %>
      <%= f.input :reconciliation_rationale %>
      <%= f.input :correction_amount %>
      <%= f.input :authorisation_date %>
      <br>
      <div class="control-group">
        <%= f.label :person_id,"Authorised by:" %>
        <div class ="controls">
          <%= f.collection_select :person_id, Person.order(:fullname), :id, :fullname, include_blank: true %>
        </div>
      </div>
      <br>
    </div>

  </div>
  <br>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
