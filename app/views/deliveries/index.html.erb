<% provide(:title, "Deliveries") %>
<p id="notice"><%= notice %></p>


<div class="breadcrumb">
  <h3>Deliveries</h3>
</div>





<div class="jumbotron">

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Delivery date</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= link_to delivery.delivery_date.strftime("%d, %b  %Y"),delivery %></td>
        <td><%= link_to 'View', delivery , class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', delivery, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @deliveries %>
  <br>

</div>


<div class="links">
<%= link_to 'New Delivery', new_delivery_path, class:'fa fa-plus' %>
</div>