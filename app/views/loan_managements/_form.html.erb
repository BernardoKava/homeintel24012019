
<%= simple_form_for(@loan_management) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="row">
    <div class="col-sm-2">
      <div class="control-group">
        <%= f.label :loan_registration_id, "Financial Institution" %>
        <div class ="controls">
          <%= f.collection_select :loan_registration_id, LoanRegistration.order(:loan_reference), :id, :loan_reference, include_blank: true %>
        </div>
      </div>
      <br>
    </div>
    <div class="col-sm-4">
      <div class="form-inputs">

        <%= f.input :amount %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-inputs">
        <%= f.input :payment_date %>
        <%= f.input :note %>
        <%= f.input :user_id ,:as => :hidden, :input_html => { :value => current_user.id} %>
      </div>

    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
<br>
