<% provide(:title, "Loan") %>

<p id="notice"><%= notice %></p>
<div class="breadcrumb">
  <h3>Loan Repayment Management</h3>
</div>


<div class="jumbotron">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Loan </th>
      <th>Year</th>
      <th>Month</th>
      <th>Payment date</th>
      <th>Amount</th>
      <th>logged by</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @loan_managements.each do |loan_management| %>
      <tr>
        <td><%= link_to loan_management.loan_registration.loan_reference,loan_management %></td>
        <td><%= loan_management.year %></td>
        <td><%= loan_management.month %></td>
        <td><%= loan_management.payment_date %></td>
        <td><%= loan_management.amount %></td>
        <td><%= loan_management.user.fullname%></td>
        <td><%= link_to 'View', loan_management, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_loan_management_path(loan_management), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', loan_management, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

<%= will_paginate @loan_managements %>

<div class="breadcrumb">
  <%= link_to 'New Payment', new_loan_management_path, class:'fa fa-plus' %>
</div>


