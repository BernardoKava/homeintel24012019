<% provide(:title, "Budgets") %>
<p id="notice"><%= notice %></p>



<div class="breadcrumb">
  <h3>Budgets</h3>
</div>

<h1>Budgets</h1>

<div class="jumbotron">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Budget date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= link_to budget.month, budget%></td>
        <td><%= budget.year %></td>
        <td><%= budget.budget_date.strftime("%d %b. %Y") %></td>
        <td><%= budget.name %></td>
        <td><%= link_to 'View', budget, class:'fa fa-eye' %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', budget, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @budgets %>
  <br>

</div>


<div class="breadcrumb">

  <%= link_to 'New Budget', new_budget_path, class: 'fa fa-plus' %>
</div>

